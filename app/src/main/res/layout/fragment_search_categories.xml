        <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
            android:id="@+id/pinClothingFasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ball_press_color="@color/colorPrimary"
            app:ball_release_color="@color/register"
            app:base_press_color="@color/register"
            app:base_release_color="@color/colorPrimary"
            app:icon_press="@drawable/check"
            app:icon_release="@drawable/cross" />
    </LinearLayout>

