<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ImageView android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_height="72dp"
        android:layout_marginBottom="26dp"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="44dp"
        android:layout_marginLeft="44dp"
        android:orientation="vertical">

        <Button
            android:layout_weight="1"
            android:text="Facebook"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:background="#3B5998"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:text="Google"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="#D34836"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.truizlop.fabreveallayout.FABRevealLayout
        android:id="@+id/fab_reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_menu_send" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        app:met_iconLeft="@drawable/email"
                        app:met_iconPadding="0dp"
                        android:inputType="textEmailAddress" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_login_passwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        app:met_iconLeft="@drawable/passwd"
                        app:met_iconPadding="0dp" />


                    <android.support.v7.widget.AppCompatButton
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:id="@+id/btn_login"
                        android:layout_width="fill_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:padding="12dp"
                        android:text="Login"/>
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Welcome"
                    android:gravity="left"
                    android:textSize="16dip"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_sign_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    app:met_iconLeft="@drawable/username"
                    app:met_iconPadding="0dp"
                    android:inputType="textPersonName"
                    app:met_maxCharacters="5" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_sign_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    app:met_iconLeft="@drawable/email"
                    app:met_iconPadding="0dp"
                    android:inputType="textEmailAddress"
                    app:met_maxCharacters="5" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_sign_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    app:met_iconLeft="@drawable/passwd"
                    app:met_iconPadding="0dp" />


                <!-- Signup Button -->
                <android.support.v7.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button"
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:padding="12dp"
                    android:text="Create Account"/>

            </LinearLayout>


        </RelativeLayout>

    </com.truizlop.fabreveallayout.FABRevealLayout>
</LinearLayout>